<div class="container">

  <h2 class="subtitle">Les plus réservés</h2>

  <div class="all_boats">
    <div class="row">
      <% @boats.limit(3).each do |boat| %>
        <div class="col-4">
          <div class="card">
            <%= cl_image_tag boat.photo.key, alt: "alttext", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= boat.title %></h5>
              <%= boat.description.first(120) %><%= "..." %>
              <%= link_to "Louer ce bateau", boat_path(boat), class: "btn btn-flat" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

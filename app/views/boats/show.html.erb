<body>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <div class="boat-card">
          <h1><%= @boat.title %></h1>
          <%= cl_image_tag @boat.photo.key, height: 300, width: 400, crop: :fill %>

          <p> <%= @boat.description %> </p>
          <p>Tarif à la journée : <%= @boat.price_per_day.to_i%> €</p>
        </div>
        <%= link_to "Retour à la liste des bateaux", boats_path %>
      </div>

      <div class="col-4">
        <div class="form">
        <%= simple_form_for [ @boat, @booking ] do |f| %>
          <div id="booking_form" class="form-inputs" data-price="<%= @boat.price_per_day %>">
            <%= f.input :starts_on,
                        as: :string,
                        required: true,
                        autofocus: true,
                        input_html: { class: "datepicker" } %>
            <%= f.input :ends_on,
                        as: :string,
                        required: true,
                        autofocus: true,
                        input_html: { class: "datepicker" } %>
          </div>
          <div id="updated_price"></div>
          <br>
          <div class="form-actions btn-primary text-center">
          <%= f.button :submit, "Réserver" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</body>

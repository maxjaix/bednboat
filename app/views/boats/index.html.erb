<h2 class="title_index">Tous nos bateaux en location</h2>

<div class="content">

  <div class="cards">
    <% @boats.each do |boat| %>
      <div class="card_index" >
        <%= link_to boat_path(boat) do %>
        <div class="card-img-top" style="background-image: url(' <%= cl_image_path(boat.photo.key, alt: "photo du bateau") %> ')">
          </div>
            <div class="card-body">
              <div class="card-rank"><i class="fas fa-anchor"></i><i class="fas fa-anchor"></i><i class="fas fa-anchor"></i><i class="fas fa-anchor grey"></i></div>
              <h5 class="card-title"><%= boat.title %></h5>
              <p class="card-text, text-justify">A partir de <%= boat.price_per_day.round(0).to_s.chars.to_a.reverse.each_slice(3).map(&:join).join(" ").reverse %>â‚¬ par jour</p>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="map"
      style="width: 50%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
